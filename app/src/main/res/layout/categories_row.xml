<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    android:padding="8dp">

    <!-- ImageView for category -->
    <ImageView
        android:id="@+id/categories_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/categories_image"/>

    <!-- TextView for category name -->
    <TextView
        android:id="@+id/categories_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-smallcaps"
        app:layout_constraintStart_toEndOf="@id/categories_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- TextView for category description -->
    <TextView
        android:id="@+id/categories_description_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/categories_image"
        app:layout_constraintTop_toBottomOf="@id/categories_name_text"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
